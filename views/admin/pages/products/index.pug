extends ../../layouts/default.pug

block main
    h1 Danh sách sản phẩm

    table.table.table-hover.table-sm
        thead
            tr
                th STT
                th Hình ảnh
                th Tiêu đề
                th Giá
                th Trạng thái
                th Hành động
        tbody
            tr
                td 1
                td 
                    img(src="https://cdn.dummyjson.com/products/images/beauty/Essence%20Mascara%20Lash%20Princess/thumbnail.png", alt="Sản phẩm 1", width="100px", height="auto")
                td Sản phẩm 1
                td 100$
                td 
                    span.badge.bg-success Hoạt động
                td
                    button.btn.btn-warning.btn-sm Sửa
                    button.btn.btn-danger.btn-sm Xóa
            tr
                td 2
                td 
                    img(src="https://cdn.dummyjson.com/products/images/beauty/Essence%20Mascara%20Lash%20Princess/thumbnail.png", alt="Sản phẩm 2", width="100px", height="auto")
                td Sản phẩm 2
                td 150$
                td 
                    span.badge.bg-danger Dừng hoạt động
                td
                    button.btn.btn-warning.btn-sm Sửa
                    button.btn.btn-danger.btn-sm Xóa
