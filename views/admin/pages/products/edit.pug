extends ../../layouts/default.pug
include ../../mixins/alert.pug
block main
    +alert-error("5000")
    +alert-success("5000")
    h1(class="mb-4") Chỉnh sửa sản phẩm
    form(
        action=`${prefixAdmin}/products/edit/${product._id}?_method=PATCH`
        id="form-edit-product"
        method="POST"
        enctype="multipart/form-data"
    )
        // Tiêu đề
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                novalidate
                value=product.title
            )

        // Mô tả
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control"
                id="desc"
                name="description"
                rows="5"
                value=product.description
            ) #{product.description}

        // Giá
        div(class="form-group")
            label(for="price") Giá
            input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                required
                value=product.price
            )

        // Giảm giá
        div(class="form-group")
            label(for="discount") % Giảm giá
            input(
                type="number"
                class="form-control"
                id="discount"
                name="discountPercentage"
                value=product.discountPercentage
            )

        // Số lượng
        div(class="form-group")
            label(for="stock") Số lượng
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value=product.stock
            )

        // Ảnh
        div(
            class="form-group"
            upload-image
        )
            label(for="thumbnail") Ảnh
            input(
                type="file"
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            img(
                src=product.thumbnail
                upload-image-preview
                class="image-preview"
            )

        // Vị trí
        div(class="form-group")
            label(for="position") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Tự động tăng"
                value=product.position
            )

        // status
        div(class="form-group")
            div(class="form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked=(product.status=="active")
                )
                label(class="form-check-label" for="statusActive") Hoạt động
            div(class="form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInactive"
                    name="status"
                    value="inactive"
                    checked=(product.status=="inactive")
                )
                label(class="form-check-label" for="statusInactive") Dừng hoạt động

        // Nút submit
        button(type="submit" class="btn btn-primary mt-3") Cập nhật

    script(src="/admin/js/product.js")
